<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog ../dbchangelog-3.4.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet id="100" author="Dante">
		<createTable tableName="TEACHER">
			<column name="TEACHER_ID" type="java.sql.Types.BIGINT" />
			<column name="USER_ID" type="java.sql.Types.BIGINT" />
		</createTable>
		<addPrimaryKey constraintName="PK_TEACHER" tableName="TEACHER"
			columnNames="TEACHER_ID" />
		<addForeignKeyConstraint constraintName="FK_TEACHER"
			referencedTableName="USER" baseColumnNames="USER_ID"
			baseTableName="TEACHER" referencedColumnNames="USER_ID" />
	</changeSet>
</databaseChangeLog>